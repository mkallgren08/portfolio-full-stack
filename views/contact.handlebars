{{>navPanel}}

<div class="container mainbody">
  <div class="row">
    <div class="col-sm-6 col-md-6 maincontent">
      <div class="row">
        <div class="col-md-12">
          <h3> Contact Me </h3>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <form id="contactForm" action="#">
            <h4>Your Name:*</h4>
            <br>
            <input class="contactee" id="contactName" type="text" placeholder="Name">
            <br>
            <h4>Your E-Mail:*</h4>
            <br>
            <input class="contactee" id="contactEmail" type="text" placeholder="Example@email.com">
            <br>
            <h4>Callback Number:</h4>
            <br>
            <div class="input-group">
              <div class="input-group-btn">
                <select class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action
                  <span class="caret"></span>
                  <ul class="dropdown-menu"></ul>
                  <option value="volvo">Volvo</option>
                  <option value="saab">Saab</option>
                  <option value="opel">Opel</option>
                  <option value="audi">Audi</option>
                  </ul>
                </select>

              </div>
              <!-- /btn-group -->
              <input class="contactee" id="contactPhone" type="text" placeholder="xxx xxx xxxx">
            </div>
            <br>
            <h4>Your Message:*</h4>
            <br>
            <textarea class="messagetxt" id="contactMessage" rows="6" columns="50"></textarea>
            <br>
            <h4>Preferred Method of Contact?*</h4>
            <br>
            <input type="radio" name="contact-type" value="email"> E-mail
            <br>
            <input type="radio" name="contact-type" value="phone"> Phone
            <br>
            <input type="radio" name="contact-type" value="either"> Either
            <br>
            <br>
            <input class="submit contact-submit" type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
    {{>connect}}

  </div>
</div>