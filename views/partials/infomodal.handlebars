<div class="modal fade" id="infoModal">
  <div class="modal-dialog">
    <div class="modal-content info-modal-content" >
      {{#each projectInfo }}
      <div class="hide" id="{{value}}">
        <div class="modal-header">
          <button type="button" class="close modal-close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title mk__centered-row">{{name}}</h4>
        </div>
        <div class="modal-body">
          <div class="mk__centered-row"><span class="pf__info-modal-subtitle">{{type}}</span></div>
          <hr>
          <div><span class="pf__info-modal-subtitle">Timeframe of Project: </span></div>
          <ul>
            {{#each time}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <hr>
          <div><span class="pf__info-modal-subtitle">Stack used: </span>{{stack}}</div>
          <hr>
          <div><span class="pf__info-modal-subtitle">Other libraries/technologies:</span>{{other}}</div>
          <hr>
          {{#each description}} 
            <p>{{{breaklines this}}}</p>
            <br>
          {{/each}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" value="{{value}}">Close</button>
          {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
        </div>
      </div> <!-- /.info-modal-content -->
      {{/each}}
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->